<div class="card">
    <div class="view stacked front">
            <p class="header">Top View</p>
            <textarea rows="4" class="text">{{ card.back.text }}</textarea>
    </div>
    <div class="view stacked back">
            <p class="header">Bottom View</p>
            <div class="text">
                <label>Text:</label>
                <input type="text" value="{{ card.front.text }}"></input>
                <label>Image:</label>
                <input type="text" value="{{ card.front.image }}"></input>
            </div>
    </div>
</div>



            